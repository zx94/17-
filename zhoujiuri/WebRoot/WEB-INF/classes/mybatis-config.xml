<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 引入jdbc配置文件 -->
    <properties resource="jdbc.properties" />
     <typeAliases>
		<package name="zhoujiuri.entity"/>
	</typeAliases>
    <!-- 配置数据连接 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<!-- 注册Mapper文件 DAO实现 -->
	<mappers>
			<mapper resource="zhoujiuri/dao/impl/UserDAOImpl.xml"/>
			<mapper resource="zhoujiuri/dao/impl/CategoryDAOImpl.xml"/>
			<mapper resource="zhoujiuri/dao/impl/ProductDAOImpl.xml"/>
			<mapper resource="zhoujiuri/dao/impl/AddressDAOImpl.xml"/>
			<mapper resource="zhoujiuri/dao/impl/OrderDAOImpl.xml"/>
			<mapper resource="zhoujiuri/dao/impl/OrderitemDAOImpl.xml"/>
	</mappers>
	
</configuration>